<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="conductorUnidad">
    
    <!-- ====================================================== -->
    <!-- ASIGNAR UNIDAD A CONDUCTOR (Insert nueva asignaciÃ³n)   -->
    <!-- ====================================================== -->
    <insert id="asignar-unidad" parameterType="pojo.ConductorUnidad">
        INSERT INTO ConductorUnidad ( 
        idColaborador, idUnidad, fechaAsignacion, activo 
        ) VALUES ( 
        #{idColaborador}, #{idUnidad}, NOW(), 1 
        )
    </insert>

    <!-- ====================================================== -->
    <!-- DESASIGNAR (marcar activo = 0 y poner fecha fin)       -->
    <!-- ====================================================== -->
    <update id="desasignar-unidad" parameterType="int">
        UPDATE ConductorUnidad 
        SET activo = 0, 
        fechaDesasignacion = NOW() 
        WHERE idConductorUnidad = #{idConductorUnidad} 
        AND activo = 1
    </update>

    <!-- ====================================================== -->
    <!-- OBTENER UNIDAD ACTUAL DE UN CONDUCTOR                  -->
    <!-- ====================================================== -->
    <select id="unidad-actual-de-conductor" parameterType="int" resultType="pojo.ConductorUnidad">
        SELECT * 
        FROM ConductorUnidad 
        WHERE idColaborador = #{idColaborador} 
        AND activo = 1 
        LIMIT 1
    </select>

    <!-- ====================================================== -->
    <!-- OBTENER CONDUCTOR ACTUAL DE UNA UNIDAD                 -->
    <!-- ====================================================== -->
    <select id="conductor-actual-de-unidad" parameterType="int" resultType="pojo.ConductorUnidad">
        SELECT * 
        FROM ConductorUnidad 
        WHERE idUnidad = #{idUnidad} 
        AND activo = 1 
        LIMIT 1
    </select>

    <!-- ====================================================== -->
    <!-- HISTORIAL POR CONDUCTOR                                -->
    <!-- ====================================================== -->
    <select id="historial-por-conductor" parameterType="int" resultType="pojo.ConductorUnidad">
        SELECT * 
        FROM ConductorUnidad 
        WHERE idColaborador = #{idColaborador} 
        ORDER BY fechaAsignacion DESC
    </select>

    <!-- ====================================================== -->
    <!-- HISTORIAL POR UNIDAD                                   -->
    <!-- ====================================================== -->
    <select id="historial-por-unidad" parameterType="int" resultType="pojo.ConductorUnidad">
        SELECT * 
        FROM ConductorUnidad 
        WHERE idUnidad = #{idUnidad} 
        ORDER BY fechaAsignacion DESC
    </select>

    <!-- ====================================================== -->
    <!-- VALIDAR CONDUCTOR LIBRE (retorna 1 si tiene unidad)    -->
    <!-- ====================================================== -->
    <select id="validar-conductor-libre" parameterType="int" resultType="int">
        SELECT COUNT(*) 
        FROM ConductorUnidad 
        WHERE idColaborador = #{idColaborador} 
        AND activo = 1
    </select>
</mapper>
